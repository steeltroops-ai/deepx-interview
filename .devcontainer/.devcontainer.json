{
    "name": "ROS 2 Foxy Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--privileged"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "twxs.cmake",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml"
    ],
    "remoteUser": "rosuser",
    "postCreateCommand": "echo 'source /opt/ros/foxy/setup.bash' >> ~/.bashrc"
}